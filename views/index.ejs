<!doctype html>
<html ng-app="dnd">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js"></script>
  <script src="/public/application.js"></script>
<head>
</head>
<body ng-controller="MainController">
  <nav class="navbar navbar-default">
    <div classs="container-fluid">
      <a class="navbar-brand" href="/">D&amp;D Difficulty Encounter Estimator</a>
    </div>
  </nav>
  <div class="container">
    <div class="row">
      <div class="text-center">
        <h2>Estimate Difficulty</h2>
      </div>
    </div>
    <div class="row">
      <div class="col col-md-8 col-md-offset-2 well well-md">
        <form name="form" class="form-horizontal" ng-submit="getEstimate()">

          <div class="form-group">
            <label class="control-label col col-sm-4">Players</label>
            <div class="col col-sm-8">
              <input type="button" class="btn btn-default" ng-click="addPlayer()" value="Add Player"/>
            </div>
            <div class="col col-sm-8 col-sm-offset-4" ng-repeat="player in players">
              <div class="input-group">
                <div class="input-group-addon">Level</div>
                <input id="player-{{$index}}" ng-model="player.level" ng-change="updatePlayerValues()" type="number" class="form-control" required />
                <div class="input-group-addon exit" ng-click="removePlayer($index)">&times;</div>
              </div>
            </div>
          </div>

          <div class="form-group">
            <label class="control-label col col-sm-4">Monsters</label>
            <div class="col col-sm-8">
              <input type="button" class="btn btn-default" ng-click="addMonster()" value="Add Player"/>
            </div>
            <div class="col col-sm-8 col-sm-offset-4"ng-repeat="monster in monsters">
              <div class="input-group">
                <div class="input-group-addon">Level</div>
                <input id="monster-{{$index}}" ng-model="monster.level" ng-change="updateMonsterValues()" type="number" class="form-control" required />
                <div class="input-group-addon exit" ng-click="removeMonster($index)">&times;</div>
              </div>
            </div>
          </div>

          <div class="form-group">
            <label class="control-label col col-sm-4">Custom Difficulties (Optional)</label>
            <div class="col col-sm-8">
              <input name="userfile" type="file" class="form-control" />
            </div>
          </div>

          <div class="form-group">
            <div class="col col-sm-8 col-sm-offset-2">
              <button type="submit" class="btn btn-primary btn-block">Estimate Difficulty</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</body>
<style>
  .exit {
    background-color: #D64541;
    cursor: pointer;
  }
  .exit:active {
    background-color: #E75652;
  }
</style>
</html>