<!doctype html>
<html>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<head>
</head>
<body>
  <nav class="navbar navbar-default">
    <div classs="container-fluid">
      <a class="navbar-brand" href="/">D&amp;D Difficulty Encounter Estimator</a>
    </div>
  </nav>
  <div class="container">
    <div class="row">
      <div class="text-center">
        <h3>Estimate Difficulty</h3>
      </div>
    </div>
    <div class="row">
      <div class="col col-md-8 col-md-offset-2 well well-md">
        <form action="/estimate" method="POST" enctype="multipart/form-data">
          <div class="form-group">
            <label>Number of Players</label>
            <input name="playercount" type="number" step="1" class="form-control" required/>
          </div>
          <div class="form-group">
            <label>Average Player Level</label>
            <div class="input-group">
              <div class="input-group-addon">Lv.</div>
              <input name="playerlevel" type="number" class="form-control" required/>
            </div>
          </div>
          <div class="form-group">
            <label>Number of Monsters</label>
            <input name="monstercount" type="number" step="1" class="form-control" required/>
          </div>
          <div class="form-group">
            <label>Average Monster Level</label>
            <div class="input-group">
              <div class="input-group-addon">Lv.</div>
              <input name="monsterlevel" type="number" class="form-control" required/>
            </div>
          </div>
          <div class="form-group">
            <label>Custom Difficulties (Optional)</label>
            <div class="input-group">
              <input name="userfile" type="file" class="form-control" />
            </div>
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Estimate Difficulty</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</body>
</html>